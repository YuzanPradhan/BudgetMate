@page "/transcationForm"

<div class="sidebar">
    <nav class="sidebar-nav">
        <h1 class="sidebar-title">BudgetMate</h1>
        <ul>
            <li><a href="/dashboard" > Dashboard</a></li>
            <li><a href="/transactions">All Transactions</a></li>
            <li><a href="/transcationForm" class="active"> Add Transaction</a></li>
            <li><a href="/tags">Manage Tags</a></li>
            <li><a href="/debts">Manage Debts</a></li>
        </ul>
    </nav>
    <a href="/" class="logout-btn">Logout</a>
</div>


<main class="transaction-form-container">
    <h2>Add Transaction</h2>

    <div class="transaction-form">
        <form @onsubmit="HandleSubmit">
            <div class="form-group">
                <label for="amount">Amount</label>
                <input type="number" id="amount" @bind="transaction.TransactionAmount" placeholder="Enter amount" required>
            </div>
            <div class="form-group">
                <label for="date">Date</label>
                <input type="date" id="date" @bind="transaction.Date" required>
            </div>
            <div class="form-group transaction-type">
                <label>Transaction Type</label>
                <select @bind="transaction.Type" >
                    <option value="----" disabled>Select transaction type</option>
                    <option value="Credit">Credit</option>
                    <option value="Debit">Debit</option>
                </select>
            </div>
            <div class="form-group">
                <label for="source">Source</label>
                <select id="source" multiple @bind="transaction.Source">
                    @foreach (var tag in Tags)
                    {
                        <option value="@tag.Name">@tag.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="note">Note</label>
                <textarea id="note" @bind="transaction.Note" placeholder="Enter note"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="submit-button">Submit Transaction</button>
            </div>
        </form>
    </div>
</main>