@page "/debts"
<div class="sidebar">
    <nav class="sidebar-nav">
        <ul>
            <h1>BudgetMate</h1>
            <li>
                <a href="/dashboard" >
                    Dashboard
                </a>
            </li>
            <li>
                <a href="/transactions">
                    Transactions
                </a>
            </li>
            <li>
                <a href="/debts" class="active">
                    Debt Management
                </a>
            </li>
            <li>
                <a href="/tags">
                    Tags
                </a>
            </li>
            <li>
                <a href="/settings">
                    Settings
                </a>
            </li>
        </ul>
    </nav>
</div>
<main class="debt-page-container">
    <h2>Manage Debts</h2>

    <!-- Debt Form -->
    <div class="debt-form">
        <form @onsubmit="HandleSubmit">
            <div class="form-group">
                <label for="amount">Amount</label>
                <input type="number" id="amount" @bind="newDebt.Amount" placeholder="Enter debt amount" required />
            </div>
            <div class="form-group">
                <label for="date">Date</label>
                <input type="date" id="date" @bind="newDebt.Date" required />
            </div>
            <div class="form-group">
                <label for="lender">Lender</label>
                <input type="text" id="lender" @bind="newDebt.Lender" placeholder="Enter lender name" required />
            </div>
            <div class="form-group">
                <label for="status">Status</label>
                <select id="status" @bind="newDebt.Status">
                    <option value="Pending">Pending</option>
                    <option value="Paid">Paid</option>
                </select>
            </div>
            <div class="form-group">
                <label for="note">Note</label>
                <textarea id="note" @bind="newDebt.Note" placeholder="Enter note"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="submit-button">Add Debt</button>
            </div>
        </form>
    </div>

    <!-- Sorting and Filtering -->
    <div class="debts-table">
        <h3>Manage Debts</h3>

        <div class="controls">
            <div class="search-bar">
                <input type="text" placeholder="Search debts..." @bind="SearchQuery" @bind:event="oninput" class="search-input" />
            </div>
            <div class="sort-buttons">
                <button @onclick="() => SortByDate(true)" class="sort-btn">Sort by Date (Asc)</button>
                <button @onclick="() => SortByDate(false)" class="sort-btn">Sort by Date (Desc)</button>
                <button @onclick="() => SortByStatus(true)" class="sort-btn">Sort by Status (A-Z)</button>
                <button @onclick="() => SortByStatus(false)" class="sort-btn">Sort by Status (Z-A)</button>
            </div>
        </div>

        <table>
            <thead>
            <tr>
                <th>ID</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Lender</th>
                <th>Status</th>
                <th>Note</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @if (FilteredDebts.Any())
            {
                @foreach (var debt in FilteredDebts)
                {
                    <tr>
                        <td>@debt.Id</td>
                        <td>@debt.Amount</td>
                        <td>@debt.Date.ToString("yyyy-MM-dd")</td>
                        <td>@debt.Lender</td>
                        <td>@debt.Status</td>
                        <td>@debt.Note</td>
                        <td>
                            <button @onclick="() => ToggleStatus(debt)" class="toggle-status-btn">Toggle Status</button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7">No debts match your search criteria.</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</main>

